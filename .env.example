# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=CoWriteAI
NEXT_PUBLIC_APP_VERSION=0.1.0

# Backend Environment Variables
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/cowrite_ai?retryWrites=true&w=majority
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MongoDB Configuration
MONGODB_DB_NAME=cowrite_ai
MONGODB_COLLECTION_PREFIX=prod_

# Redis Configuration
REDIS_DB=0
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.txt,.md,.docx
UPLOAD_DIR=./uploads

# AI/ML Configuration
HF_API_TOKEN=your-huggingface-api-token
SPACY_MODEL=en_core_web_sm
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@cowriteai.com

# Development/Production
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1